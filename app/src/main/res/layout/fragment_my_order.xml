<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/my_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/my_order_heart"
        app:layout_constraintTop_toBottomOf="@+id/my_order_type" />

    <TextView
        android:id="@+id/my_order_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/my_order_type_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/my_order_type_image"
        android:layout_width="47dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/my_order_type"
        app:layout_constraintEnd_toStartOf="@+id/my_order_type"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_order_type"
        app:srcCompat="@drawable/butterfly" />

    <ImageView
        android:id="@+id/my_order_heart"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/my_order_title"
        app:layout_constraintEnd_toStartOf="@+id/my_order_title"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_order_title"
        app:srcCompat="@drawable/heart" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/my_order_image"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/chef1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_order_heart" />

    <TextView
        android:id="@+id/my_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_order_image" />

    <ImageView
        android:id="@+id/my_order_prog4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/my_order_prog3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/my_order_prog3"
        app:layout_constraintTop_toTopOf="@+id/my_order_prog3"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/progbar4" />

    <ImageView
        android:id="@+id/my_order_prog3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/my_order_prog2"
        app:layout_constraintEnd_toStartOf="@+id/my_order_prog4"
        app:layout_constraintStart_toEndOf="@+id/my_order_prog2"
        app:layout_constraintTop_toTopOf="@+id/my_order_prog2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/progbar3" />

    <ImageView
        android:id="@+id/my_order_prog2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/my_order_prog1"
        app:layout_constraintEnd_toStartOf="@+id/my_order_prog3"
        app:layout_constraintStart_toEndOf="@+id/my_order_prog1"
        app:layout_constraintTop_toTopOf="@+id/my_order_prog1"
        app:srcCompat="@drawable/progbar2" />

    <ImageView
        android:id="@+id/my_order_prog1"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/my_order_complete"
        app:layout_constraintEnd_toStartOf="@+id/my_order_prog2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_order_status"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/progbar1" />

    <Button
        android:id="@+id/my_order_complete"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:text="@string/mark_order"
        android:textColor="#FFFFFF"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>